{
  "name": "tidbyt-greeting",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "server:dev": "bun --watch server/index.ts",
    "server:start": "NODE_ENV=production bun dist/index.js",
    "server:build": "bun build server/index.ts --target bun --outdir ./dist",
    "push:start": "bun server/tidbyt/push.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run server/db/migrate.ts",
    "web:dev": "astro dev",
    "web:start": "PORT=8080 HOST=0.0.0.0 node dist/server/entry.mjs",
    "web:build": "astro check && astro build",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^8.3.4",
    "@astrojs/react": "^3.6.2",
    "@astrojs/tailwind": "^5.1.2",
    "@elysiajs/cors": "^1.1.1",
    "@tanstack/react-query": "^5.59.16",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "astro": "^4.16.7",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "elysia": "^1.1.13",
    "lucide-astro": "^0.446.0",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.10",
    "@types/node": "^22.5.5",
    "drizzle-kit": "^0.24.2",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1"
  }
}
